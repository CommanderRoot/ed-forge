{
  "name": "ed-forge",
  "version": "1.3.1",
  "main": "lib/index.js",
  "repository": "git@github.com:felixlinker/ed-forge.git",
  "author": "felixlinker <linkerfelix@gmail.com>",
  "license": "MIT",
  "watch": {
    "build_light": {
      "patterns": [
        "src/**/*.js"
      ],
      "runOnChangeOnly": true
    }
  },
  "scripts": {
    "build": "node coriolis_mapper.js && npm run build_light && npm run build_typings",
    "build_light": "babel src -d lib --copy-files --source-maps",
    "build_typings": "jsdoc -d lib/ -t node_modules/tsd-jsdoc/dist src/*.js src/data/index.js",
    "prepublish": "npm run build",
    "release": "np",
    "watch": "npm run build && npm-watch build_light"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "ajv": "^6.5.4",
    "auto-bind": "^1.2.1",
    "coriolis-data": "github:edcd/coriolis-data",
    "jsdoc": "^3.5.5",
    "lodash": "^4.17.11",
    "pako": "^1.0.6",
    "tsd-jsdoc": "^2.0.0-beta.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "np": "*",
    "@babel/preset-env": "^7.1.0",
    "npm-watch": "^0.4.0"
  }
}
