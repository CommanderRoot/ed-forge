{
  "name": "ed-forge",
  "version": "1.4.0",
  "main": "lib/index.js",
  "repository": "git@github.com:felixlinker/ed-forge.git",
  "author": "felixlinker <linkerfelix@gmail.com>",
  "license": "MIT",
  "watch": {
    "build_light": {
      "patterns": [
        "src/**/*.js"
      ],
      "runOnChangeOnly": true
    }
  },
  "scripts": {
    "build": "node coriolis_mapper.js && npm run build_light",
    "build_light": "tsc",
    "docs": "typedoc --gitRevision master --name \"E:D Forge\" --out docs/ src/",
    "prepublish": "npm run build",
    "release": "np",
    "watch": "npm run build && npm-watch build_light"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "ajv": "^6.5.4",
    "auto-bind": "^1.2.1",
    "coriolis-data": "github:edcd/coriolis-data",
    "i18next": "^13.0.0",
    "jsdoc": "^3.5.5",
    "lodash": "^4.17.11",
    "pako": "^1.0.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@types/auto-bind": "^1.2.0",
    "typedoc-plugin-external-module-name": "^1.1.3",
    "@types/babel__core": "^7.0.4",
    "@types/lodash": "^4.14.118",
    "@types/pako": "^1.0.0",
    "@types/node": "^10.12.18",
    "np": "^3.1.0",
    "npm-watch": "^0.4.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.2.2"
  }
}
