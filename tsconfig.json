{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2017", "dom"],
        "declaration": true,
        "declarationMap": true,
        "outDir": "./lib",
        "resolveJsonModule": true,
        "strict": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "inlineSourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
